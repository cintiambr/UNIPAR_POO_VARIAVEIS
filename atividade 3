1-
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        
        double valorUm = 0.0;
        double valorDois = 0.0;
        double valorTres = 0.0;
        
        System.out.println("Qual o primeiro valor: ");
        valorUm = scanner.nextDouble();
        System.out.println("Qual o segundo valor: ");
        valorDois = scanner.nextDouble();
        System.out.println("Qual o terceiro valor: ");
        valorTres = scanner.nextDouble();
        
        scanner.close();
        
        double soma = valorUm + valorDois + valorTres;
        
        System.out.println("A soma dos valores e: " + soma);
    }
}

2-import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        
        double valorUm = 0.0;
        double valorDois = 0.0;
        
        System.out.println("Qual o primeiro valor: ");
        valorUm = scanner.nextDouble();
        System.out.println("Qual o segundo valor: ");
        valorDois = scanner.nextDouble();
        scanner.close();
        
        double sub = valorUm - valorDois;
        
        System.out.println(valorUm + " - " + valorDois + " = " + sub);
    }
}

3-
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        
        double notaUm = 0.0;
        double notaDois = 0.0;
        
        System.out.println("Qual o primeiro valor: ");
        notaUm = scanner.nextDouble();
        System.out.println("Qual o segundo valor: ");
        notaDois = scanner.nextDouble();
        scanner.close();
        
        double media = (notaUm + notaDois) / 2;
        
        System.out.println("Media igual a: " + media);
    }
}

4-
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        
        double notaUm = 0.0;
        double notaDois = 0.0;
        double notaTres = 0.0;
        double notaQuatro = 0.0;
        
        System.out.println("Qual a primeira nota: ");
        notaUm = scanner.nextDouble();
        System.out.println("Qual o segundo valor: ");
        notaDois = scanner.nextDouble();
        System.out.println("Qual a terceira nota: ");
        notaTres = scanner.nextDouble();
        System.out.println("Qual a quarta nota: ");
        notaQuatro = scanner.nextDouble();
        
        scanner.close();
        
        double media = (notaUm + notaDois + notaTres + notaQuatro) / 4;
        
        System.out.println("Media igual a: " + media);
    }
}

5-
import java.util.Scanner;

class HelloWorld {
    static void shit(double a, double b) {
        double sum = a + b;
        double sub = a - b;
        double mult = a * b;
        double div = a / b;
        
        System.out.println("Sum: " + sum);
        System.out.println("Sub: " + sub);
        System.out.println("mult: " + mult);
        System.out.println("div: " + div);
    }
    
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        
        double firstNum = 0.0;
        double secNum = 0.0;
        
        System.out.println("Primeiro número: ");
        firstNum = scanner.nextDouble();
        System.out.println("Segundo número: ");
        secNum = scanner.nextDouble();
        
        scanner.close();
        
        shit(firstNum, secNum);
    }
}
