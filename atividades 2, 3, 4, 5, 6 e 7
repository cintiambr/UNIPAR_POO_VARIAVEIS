  public class ControleEstoque {
    public static void main(String[] args) {
        // Declaração das variáveis aqui
    String produto1 = "smartphone";
    String marca1 = "samsung";
    float preco1 = 1500;
    int quantidade1 = 22;
    
    String produto2 = "laptop";
    String marca2 = "dell";
    float preco2 = 3000;
    int quantidade2= 30;
    
    String produto3 = "fone bluetooth";
    String marca3 = "apple";
    float preco3 = 150;
    int quantidade3 = 30;
    
    System.out.println("Dados do Smartphone:");
    System.out.println("Nome: " + produto1);
    System.out.println("marca" + marca1);
    System.out.println("preço" + preco1);
    System.out.println("marca" + quantidade1);
    
    System.out.println("Dados do Laptop:");
    System.out.println("Nome: " + produt2);
    System.out.println("marca" + marca2);
    System.out.println("preço" + preco2);
    System.out.println("marca" + quantidade2);
    
        System.out.println("Dados do Laptop:");
    System.out.println("Nome: " + produt3);
    System.out.println("marca" + marca3);
    System.out.println("preço" + preco3);
