3-
public class DadosAluno {

    public static void main(String[] args) {
        String nomeDoAluno = "Nome do Aluno";
        int idadeDoAluno = 20;
        double notaProva1 = 8.5;
        double notaProva2 = 9.0;
        double mediaFinal = (notaProva1 + notaProva2) / 2;

        System.out.println("Nome do Aluno: " + nomeDoAluno);
        System.out.println("Idade do Aluno: " + idadeDoAluno);
        System.out.println("Nota da Prova 1: " + notaProva1);
        System.out.println("Nota da Prova 2: " + notaProva2);
        System.out.println("Média Final: " + mediaFinal);
    }
}

