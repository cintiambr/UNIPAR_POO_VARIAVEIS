1- 
class Divisao {
    public static void main(String[] args) {
        for (int i = 0; i < 51; i++){
            if (i % 3 == 0){
                System.out.println(i + " = Fizz");
            }
            if (i % 5 ==0){
                System.out.println(i + " = Buzz");
            }   
            if (i % 3 == 0 || i % 5 == 0){
                System.out.println(i + " = FizzBuzz");    
            }
        }
    }
}

