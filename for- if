import java.util.Scanner;

public class Atividade3 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int ano = 0;
        int mes = 0;
        int dia = 0;
        int result = 0;

        System.out.println("Informe sua idade em anos, meses e dias");
        System.out.print("Informe sua: ");
        year = scanner.nextInt();
        System.out.print("Informe os meses: ");
        month = scanner.nextInt();
        System.out.print("Informe os dias: ");
        day = scanner.nextInt();

        result = (ano * 365 + mes * 30 + dia);

        System.out.println("Voce tem " + result + " de idade");

    }
}
