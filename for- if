public class Atividade2 {
    public static void main(String[] args) {
        int i = 10;

        for (i = 10; i >= 0; i--) {
            System.out.println("+ i + " patinhos foram passear Além das montanhas para brincar. A mamãe gritou: Quá, quá, quá, quá Mas só " + i + " patinhos voltaram de lá");

            if (i == 0) {
                System.out.println("mamãe patinha foi procurar. Além das montanhas na beira do mar. A mamãe gritou: Quá, quá, quá, quá, e os 10 patinhos voltaram de lá.");
            }
        }
    }
}

